<Window x:Class="CardGame.MainWindow"  
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="CardPicker" Height="100" Width="210"   
  Background="White">
    <!-- Buttons arranged vertically inside a StackPanel. -->
    <StackPanel HorizontalAlignment="Left" Width="202">
        <Button Content="Pick a card from the deck!"
                HorizontalAlignment="Left"
                Margin="10,10,0,0"
                VerticalAlignment="Top"
                Width="180"
                Click="Button_Click"/>
        <TextBlock x:Name="text" Height="35" TextWrapping="Wrap" HorizontalAlignment="Center" Text="" Loaded="TextBlock_Loaded" Margin="10,0"/>
    </StackPanel>

</Window>  
